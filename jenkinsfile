pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Bhargava7032/E-CommerceWebsite'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ecommerce-static .'
            }
        }
        stage('Deploy Container') {
            steps {
                sh '''
                  docker rm -f ecommerce || true
                  docker run -d -p 8081:80 --name ecommerce ecommerce-static
                '''
            }
        }
    }
}
