pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/<YOUR_GITHUB_USERNAME>/E-CommerceWebsite.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ecommerce-static .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                docker stop ecommerce || true
                docker rm ecommerce || true
                docker run -d --name ecommerce -p 8080:80 ecommerce-static
                '''
            }
        }
    }
}
